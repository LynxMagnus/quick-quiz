@model List<QuickQuiz.Models.Question>

@{
    ViewBag.Title = "Questions";
}

<h2>Questions</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { quizId = ViewBag.QuizId })
</p>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Questions")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { questionId = item.QuestionId }) |
                    @Html.ActionLink("Details", "Details", new { questionId = item.QuestionId }) |
                    @Html.ActionLink("Delete", "Delete", new { questionId = item.QuestionId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>No questions exist</p>
}